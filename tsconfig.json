{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["esnext", "dom"],
        "skipLibCheck": true,
        "types": ["jquery", "node", "Swiper"],

        /* Bundler mode */
        "moduleResolution": "node",
        "isolatedModules": true,
        "noEmit": false,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "baseUrl": "./resources/typescript",
        "useDefineForClassFields": false,
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": ["resources/typescript"]
}
